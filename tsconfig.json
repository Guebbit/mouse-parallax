{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "sourceMap": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "types": [
      "cypress",
      "node"
    ]
  },
  "include": [
    "./src",
    "cypress/**/*.ts"
  ]
}
