{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "baseUrl": "src",
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node",
      "@types/jest"
    ]
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
